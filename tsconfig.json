{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDir": ".",
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["./**/*"]
}
